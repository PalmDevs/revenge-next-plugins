{
	"compilerOptions": {
    // Features
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2020",
    // Bundler
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "preserve",
    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@revenge-mod/plugins/_": ["./types/next-plugins-internal"],
			"@revenge-mod/*": ["./types/next/lib/*"],
      "~plugins/preinit/*": ["./plugins/*"],
      "~plugins/init/*": ["./plugins/*"],
      "~plugins/start/*": ["./plugins/*"]
		},
		"types": ["./types/next/globals", "./node_modules/react-native/types/index"]
	},
	"include": ["plugins", "types"]
}
